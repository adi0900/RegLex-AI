{
  "version": 2,
  "name": "reglex-ai",
  "buildCommand": "cd Frontend && npm run build",
  "outputDirectory": "Frontend/.next",
  "installCommand": "cd Frontend && npm install",
  "framework": "nextjs",
  "functions": {
    "Frontend/app/**": {
      "memory": 1024,
      "maxDuration": 60
    }
  },
  "env": {
    "NEXT_PUBLIC_API_URL": "https://your-backend-api.vercel.app"
  }
}